<p class="pull-right">
<a class="btn btn-default" href="/servers/new" role="button">new server</a>
</p>

<h1>{{title}}</h1>

<ul class="nav nav-tabs">
  <li role="presentation"><a href="/">Sites</a></li>
  <li role="presentation" class="active"><a href="#">Servers</a></li>
</ul>

<table class="table">
  <thead>
    <tr><th>Server</th><th>Active</th><th>Last Post</th><th>Load</th><th>TCP</th><th>Disk</th><th colspan="2">Actions</th></tr>
  </thead>
  <tbody>
    {{#each servers}}
    <tr>
      <td>{{label}}</td>
      <td>{{#if active}}Active{{else}}Inactive{{/if}}</td>
      <td>{{last_post.created}}</td>
      <td><span class="inlinesparkline">{{meta.load_avg}}</span></td>
      <td><span class="inlinesparkline">{{meta.tcp_conns}}</span></td>
      <td>{{last_post.disk_pct}}%</td>
      <td><a href="/servers/{{id}}/edit">Edit</a></td>
      <td><a href="/servers/{{id}}">Data</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
