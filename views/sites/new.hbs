<h1>define site</h1>

<form method="post" action="" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="http..." name="url">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Label</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="label..." name="label">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Expected HTTP status</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" value="200" placeholder="status code..." name="expected_status">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Expected pattern</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="pattern..." name="expected_pattern">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox" checked="checked" name="active"> Active
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox" checked="checked" name="notify"> Notify users by email
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>