<h1>edit site</h1>

<form method="post" action="/sites/{{site.id}}/edit" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" value="{{site.url}}" placeholder="http..." name="url">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Label</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" value="{{site.label}}" placeholder="label..." name="label">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Expected HTTP status</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" value="{{site.expected_status}}" placeholder="status code..." name="expected_status">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Expected pattern</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" value="{{site.expected_pattern}}" placeholder="pattern..." name="expected_pattern">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox" {{#if site.notify}}checked="checked" {{/if}}name="notify"> Notify users by email
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>